      {{else}}
      <li>

        <a href="admin/login"><button type="button" class="btn btn-primary"><i
              class="fas fa-sign-in-alt  me-2"></i>Ingreso</button></a>
        <a href="/admin/registro"><button type="button" class="btn btn-primary"><i
              class="fas fa-user-plus me-2"></i>Registro</button></a>



      </li>
      {{/if}}



    </ul>
  </div>
  <main class="columna centrado margin-tb-5"> {{{body}}}</main>

</body>

</html>